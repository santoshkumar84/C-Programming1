//Check number is even or odd using ternary operator
#include<stdio.h>
int main(){
    int num;
    printf("Enter Number : ");
    scanf("%d", &num);
    (num%2 == 0) ? printf("Number is Even") : printf("Number is Odd");
    return 0;
}

//Program to check number is even or odd.
#include<stdio.h>
int main(){
    int num;
    printf("Enter Number : ");
    scanf("%d", &num);
    if(num%2==0){
        printf("Number is Even");
    }
    else{
        printf("Number is Odd");
    }
    return 0;
}
